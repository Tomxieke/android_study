<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:layout_margin="5dp"
        android:id="@+id/adapter_relative_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_person"
        android:scaleType="centerCrop"/>
    
    <TextView 
        android:layout_margin="5dp"
        android:id="@+id/adapter_relative_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/adapter_relative_icon"
        android:text="土家锅盔"
        android:textSize="18sp"
        android:gravity="center_horizontal"/>
    
    <TextView 
        android:layout_margin="5dp"
        android:id="@+id/adapter_relative_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是内容"
        android:layout_toRightOf="@id/adapter_relative_icon"
        android:layout_below="@id/adapter_relative_title"/>
    

</RelativeLayout>
